/* pages/product/product.wxss */
.book-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
}

.book-item {
  width: calc(50% - 5px);
  margin-bottom: 10px;
}

.book-cover {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.book-info {
  padding: 10px;
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid #e5e5e5;
}

.book-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.book-author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.book-price {
  font-size: 28rpx;
  color: #e60012;
}
