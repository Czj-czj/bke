.container {
  padding: 30rpx;
}

.input-container {
  /* display: flex; */
  margin-bottom: 20rpx;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

input,
textarea {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.button {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
}
.box_text {
  background-color: white;
  text-align: center;
  padding: 300rpx 0;
  margin-top: 30rpx;
  color: rgba(0, 0, 0, 0.5);
}

.button_clear {
  width: 300rpx;
  text-align: center;
  margin: 20% auto 0 auto;
  height: 80rpx;
  color: #07c160;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: rgba(0, 0, 0, 0.03);
}